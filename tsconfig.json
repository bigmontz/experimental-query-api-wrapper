{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "types",
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
