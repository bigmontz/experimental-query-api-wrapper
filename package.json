  "devDependencies": {
    "@types/jest": "^29.5.3",
    "downdoc": "^1.0.2-stable",
    "fast-check": "^3.10.0",
    "jest": "^29.6.2",
    "testcontainers": "^8.16.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.2",
    "typescript": "^4.9.5"
